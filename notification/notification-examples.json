{
  "device_registration": {
    "description": "Login pe device token save karne ke liye",
    "endpoint": "POST /api/register-device",
    "request": {
      "user_id": 123,
      "expo_token": "ExponentPushToken[xxxxxxxxxxxxxxxxxxxxxx]",
      "device_id": "iPhone14_ABC123",
      "device_type": "ios"
    },
    "response": {
      "success": true,
      "message": "Device registered successfully",
      "device_token_id": 456
    }
  },

  "device_deactivation": {
    "description": "Logout pe device token deactivate karne ke liye",
    "endpoint": "POST /api/deactivate-device",
    "request": {
      "user_id": 123,
      "device_id": "iPhone14_ABC123"
    },
    "response": {
      "success": true,
      "message": "Device deactivated successfully"
    }
  },

  "get_user_tokens": {
    "description": "User ke active tokens get karne ke liye",
    "endpoint": "GET /api/user-tokens/123",
    "response": {
      "success": true,
      "tokens": [
        "ExponentPushToken[xxxxxxxxxxxxxxxxxxxxxx]",
        "ExponentPushToken[yyyyyyyyyyyyyyyyyyyyyy]"
      ]
    }
  },

  "error_responses": {
    "device_not_found": {
      "success": false,
      "error": "Device not found",
      "message": "No active device found for this user"
    },
    "invalid_token": {
      "success": false,
      "error": "Invalid token",
      "message": "Expo token is invalid or expired"
    },
    "user_not_found": {
      "success": false,
      "error": "User not found",
      "message": "User with this ID does not exist"
    }
  },

  "device_types": {
    "ios": "iPhone/iPad",
    "android": "Android phones/tablets",
    "web": "Web browsers"
  }
}
